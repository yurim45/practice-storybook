{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": { 
      "@assets/*": [
      "./public/assets/*"
      ], 
      "@components/*": [
        "./src/components/*"
      ],
      "@elem/*": [
        "./src/components/elem/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@data/*": [
        "./src/data/*"
      ], 
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
